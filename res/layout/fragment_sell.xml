<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c5252"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sellup.SellActivity$PlaceholderFragment" >

    <Button
        android:id="@+id/SignUp1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/signup"
        android:text="Sign Up"
        android:textColor="#ffff" />

    <EditText
        android:id="@+id/pword1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/login1"
        android:layout_alignLeft="@+id/username1"
        android:layout_marginBottom="18dp"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:typeface="sans"
        android:textStyle="bold"
        android:password="true"
       />

    <EditText
        android:id="@+id/username1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/pword1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textStyle="bold"
        android:typeface="sans"
         />

    <Button
        android:id="@+id/login1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/SignUp1"
        android:layout_alignLeft="@+id/pword1"
        android:layout_marginBottom="126dp"
        android:background="#236c82"
        android:drawableRight="@drawable/login"
        android:text="Log In"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username1"
        android:layout_alignLeft="@+id/SignUp1"
        android:layout_marginBottom="29dp"
        android:src="@drawable/logo" />

</RelativeLayout>